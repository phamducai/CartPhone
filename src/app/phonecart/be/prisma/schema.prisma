generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id             Int        @id @default(autoincrement())
  name           String?    @db.VarChar(255)
  email          String     @unique(map: "email") @db.VarChar(255)
  dateOfBirth    DateTime?  @db.Date
  avatar         String?    @db.LongText
  companthome    String?    @db.VarChar(255)
  compantAddress String?    @db.VarChar(255)
  sex            users_sex?
  password       String     @db.VarChar(255)
  other_cart     cart[]     @relation("cartTocart")
}

model cart {
  id       Int    @id @default(autoincrement())
  phone_id Int?
  user_id  Int?
  number   Int?
  phone    phone? @relation(fields: [phone_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "cart_ibfk_1")
  cart     users? @relation("cartTocart", fields: [user_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "cart_ibfk_2")

  @@index([phone_id], map: "phone_id")
  @@index([user_id], map: "user_id")
}

model phone {
  id          Int     @id @default(autoincrement())
  name        String? @db.VarChar(255)
  price       Int?
  image       String? @db.LongText
  rate        Int?
  description String? @db.Text
  cart        cart[]
}

enum users_sex {
  Male
  Female
  Orther
}
